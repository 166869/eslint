/**
 * @fileoverview Test rule to flag if the filename is missing;
 * @author Stefan Lau
 */

"use strict";

//------------------------------------------------------------------------------
// Rule Definition
//------------------------------------------------------------------------------

module.exports = {
    meta: {
        fixable: "code",
        schema: []
    },
    create(context) {
        return {
            "Program": function(node) {
                if (context.getFilename() === '<input>') {
                    context.report(node, "Filename test was not defined.");
                }
            }
        };
    }
};
